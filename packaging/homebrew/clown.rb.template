class Clown < Formula
  desc "CLI orchestrator for coding agents"
  homepage "https://github.com/neul-labs/ccswitch"
  version "{{VERSION}}"
  license "MIT"

  on_macos do
    on_arm do
      url "https://github.com/neul-labs/ccswitch/releases/download/v{{VERSION}}/clown-darwin-arm64-{{VERSION}}.tar.gz"
      sha256 "{{SHA256_DARWIN_ARM64}}"
    end
    on_intel do
      url "https://github.com/neul-labs/ccswitch/releases/download/v{{VERSION}}/clown-darwin-x64-{{VERSION}}.tar.gz"
      sha256 "{{SHA256_DARWIN_X64}}"
    end
  end

  on_linux do
    on_arm do
      url "https://github.com/neul-labs/ccswitch/releases/download/v{{VERSION}}/clown-linux-arm64-{{VERSION}}.tar.gz"
      sha256 "{{SHA256_LINUX_ARM64}}"
    end
    on_intel do
      url "https://github.com/neul-labs/ccswitch/releases/download/v{{VERSION}}/clown-linux-x64-{{VERSION}}.tar.gz"
      sha256 "{{SHA256_LINUX_X64}}"
    end
  end

  def install
    bin.install "clown"
    bin.install "clownd"
  end

  def caveats
    <<~EOS
      clown has been installed. To start using it:
        clown --help

      The daemon (clownd) will auto-start when needed.
    EOS
  end

  test do
    assert_match version.to_s, shell_output("#{bin}/clown --version")
  end
end
