#!/usr/bin/env node
const { spawn } = require('child_process');
const path = require('path');
const fs = require('fs');

const ext = process.platform === 'win32' ? '.exe' : '';
const binPath = path.join(__dirname, `ringletd${ext}`);

if (!fs.existsSync(binPath)) {
  console.error('ringletd binary not found. Try reinstalling: npm install -g ringlet-cli');
  process.exit(1);
}

const child = spawn(binPath, process.argv.slice(2), {
  stdio: 'inherit',
  windowsHide: true
});

child.on('close', (code) => {
  process.exit(code || 0);
});
